{
  "name": "@falcondev-oss/form",
  "type": "module",
  "version": "0.1.0",
  "description": "Type-safe, framework agnostic form state library based on @vue/reactivity.",
  "license": "Apache-2.0",
  "repository": "github:falcondev-oss/form",
  "bugs": {
    "url": "https://github.com/falcondev-oss/form/issues"
  },
  "keywords": [
    "form",
    "frontend",
    "state-management",
    "reactivity",
    "typescript"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./reactive": {
      "import": "./dist/reactive.js",
      "require": "./dist/reactive.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "22",
    "pnpm": "9"
  },
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "lint": "eslint --cache . && prettier --check --cache .",
    "lint:ci": "eslint --cache --cache-strategy content . && prettier --check --cache --cache-strategy content .",
    "lint:fix": "eslint --fix --cache . && prettier --write --cache .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@vue/reactivity": "^3.5.13",
    "dot-prop": "^9.0.0",
    "klona": "^2.0.6",
    "on-change": "^5.0.1",
    "remeda": "^2.19.0",
    "ts-pattern": "^5.6.0",
    "type-fest": "^4.32.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@louishaftmann/eslint-config": "^4.0.3",
    "@louishaftmann/prettier-config": "^4.0.3",
    "eslint": "~9.14.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "changelogithub": {
    "extends": "gh:falcondev-it/configs/changelogithub"
  }
}
